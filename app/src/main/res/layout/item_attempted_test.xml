<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_main"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/_3sdp"
    android:layout_marginVertical="@dimen/_3sdp"
    app:cardBackgroundColor="@color/color_white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardUseCompatPadding="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:rippleColor="@color/light_blue"
    app:strokeWidth="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_title"
            style="@style/TextAppearance.Omang.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_greyish_brown"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/color_white" />


        <TextView
            android:id="@+id/txt_test_name"
            style="@style/TextAppearance.Omang.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="DOE Final Test"
            android:textColor="@color/color_greyish_brown"
            android:textSize="@dimen/_10ssp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:rowCount="9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="@+id/txt_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"
            tools:context=".GridXMLActivity">

            <TextView
                android:id="@+id/txt_obtained_label"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:text="% Obtained"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=":"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txt_obtained"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="70%"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_total_question_label"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Total Q."
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txt_total_question"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="20"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txt_attempted_label"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Attempted Q."
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txt_attempted"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="10"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />


            <TextView
                android:id="@+id/txt_correct_label"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Correct"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txt_correct"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="7"
                android:textColor="@color/color_shamrock_green"
                android:textSize="@dimen/_8ssp" />


            <TextView
                android:id="@+id/txt_wrong_label"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Wrong"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txt_wrong"
                style="@style/TextAppearance.Omang.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="3"
                android:textColor="@color/color_tomato_red"
                android:textSize="@dimen/_8ssp" />

        </GridLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
