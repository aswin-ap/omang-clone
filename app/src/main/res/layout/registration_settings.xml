<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_20sdp"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_wifi"
                style="@style/settings_button"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_wifi_white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDataEnable"
                style="@style/settings_button"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/setting_bt_bg_enabled"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_mobile_data_on" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDataDisable"
                style="@style/settings_button"
                android:layout_marginStart="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_mobile_data_off" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>
